---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@/components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@/components/sections/landing/HeroSectionAlt.astro";
import FeaturesGeneral from "@/components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@/components/sections/features/FeaturesNavs.astro";
import FAQ from "@/components/sections/FAQ.astro";
import faqs from "@/data_files/faqs.json";
import features from "@/data_files/features.json";
import LeftSection from "@/components/ui/blocks/LeftSection.astro";
import RightSection from "@/components/ui/blocks/RightSection.astro";
import ContactSection from "@/components/sections/ContactSection.astro";
import MainSection from "@/components/ui/blocks/MainSection.astro";

interface Article {
  isRightSection: boolean;
  id: string;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: string;
  imgAlt?: string;
  imgOne?: string;
  imgOneAlt?: string;
  imgTwo?: string;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    id: "strategie-numerique",
    isRightSection: true,
    title: "Élaboration de votre stratégie numérique",
    subTitle: `Le monde numérique est en constante évolution, il est donc primordial de définir une stratégie, un cap, aligner avec vos objectifs commerciaux.<br /><br />
    Notre approche unique combine <span class="font-bold">l'expertise technique</span>, <span class="font-bold">le marketing créatif</span> et <span class="font-bold">une écoute attentive</span> de vos besoins pour développer une présence en ligne impactante. 
<br /><br /> 
Grâce à notre <span class="font-bold">méthodologie centrée sur l'humain</span> et une <span class="font-bold">analyse approfondie du marché</span> que vous ciblez, nous posons les bonnes questions et prenons le recul nécessaire pour définir la stratégie la plus adaptée pour <span class="font-bold">atteindre vos objectifs</span>. 
.<br /><br /> 
Nous vous accompagnons de l'audit initial à l'optimisation continue, en passant par la création de contenus de qualité pour alimenter votre SEO et fidéliser vos clients.<br /><br />  
Notre objectif ? <span class="font-bold">Générer du trafic qualifié</span>, <span class="font-bold">convertir vos prospects en clients fidèles</span> et <span class="font-bold">assurer une croissance durable</span> de votre activité en ligne.<br /><br />  
Choisir le studio <span
        class="font-bold text-green-700 dark:text-green-400">Web Crafters</span>, c'est choisir le bon partenaire pour <span class="font-bold">élaborer et exécuter votre stratégie numérique de manière cohérente et optimale</span>.<br /><br /> 
`,
    single: true,
    imgOne: "/images/strat.jpg",
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    btnExists: true,
    btnTitle: "J'élabore ma stratégie numérique",
    btnURL: "#contact-form",
  },
  {
    id: "identite-visuelle",
    isRightSection: false,
    title: "Création de votre identité visuelle",
    subTitle: `La clef pour capter l'attention de vos prospect c'est <span class="font-bold">l'unicité</span>.<br /><br />
     Notre mission chez <span
        class="font-bold text-green-700 dark:text-green-400">Web Crafters</span>, est de vous concevoir une identité visuelle qui se démarque de vos concurrents afin d'attirer l'oeil de vos prospect et suscité l'émotion qui les feront passer à l'action.<br /><br />
        Nos spécialistes de l'UI/UX design veillent à ce que chaque pixel reflète <span class="font-bold">une expérience utilisateur optimale</span>, mêlant esthétique, accessibilité et fonctionnalité.<br /><br />
        De la conception de votre <span class="font-bold">logo</span> à la réalisation de <span class="font-bold">supports de communication variés</span>, en passant par l'élaboration de la <span class="font-bold">charte graphique</span>, nous veillons à la cohérence de votre image à travers tous les canaux<br /><br />
        Notre approche <span class="font-bold">flexible</span> et <span class="font-bold">créative</span> assure une expérience utilisateur <span class="font-bold">cohérente et optimale</span>, renforçant ainsi votre présence en ligne et hors ligne.<br /><br />
    `,
    img: "/images/web-design.jpg",
    imgAlt: "Construction site before and after",
    btnExists: true,
    btnTitle: "Créer mon identité visuelle",
    btnURL: "#contact-form",
  },
  {
    id: "creation-site",
    isRightSection: true,
    title: "Création de votre site ou application web",
    subTitle: `Avoir une présence en ligne n'est plus un luxe, mais une nécessité si vous souhaitez vous démarquer de votre concurrence.<br/><br/> 
      Nos <span
        class="font-bold text-green-700 dark:text-green-400">Web Crafters</span>, s'appuient sur <span class="font-bold">les standards du web</span> avec le traditionnel trio HTML/CSS/JS pour développer des sites et des applications web <span class="font-bold">sur mesure</span>, alliant <span class="font-bold">design</span>, <span class="font-bold">performance</span> et <span class="font-bold">ergonomie</span>.<br/><br/>
      <span class="font-bold">Site Vitrine</span> : Votre carte de visite numérique. Un site vitrine bien conçu vous permet de présenter votre entreprise, vos produits et vos services, de communiquer votre valeur ajoutée et d'engager vos visiteurs. Il s'agit de l'étape de base pour <span class="font-bold">bâtir votre présence en ligne</span> et asseoir votre crédibilité.<br/><br/>
      <span class="font-bold">Site E-commerce</span> : Ouvrez votre <span class="font-bold">boutique en ligne 24/7</span>. Nous développons des sites e-commerce intuitifs, sécurisés et optimisés pour les conversions. Que vous vendiez un produit unique ou une large gamme d'articles, nous maitrisons les codes du e-commerce et nous concevons la solution adaptée à votre activité pour faire décoller vos ventes en ligne.<br/><br/>
      <span class="font-bold">Application Web & Mobile</span> : Simplifiez les opérations et améliorez l'expérience utilisateur avec une application web ou mobile personnalisée. De la gestion de projet à la relation client, notre équipe développe des <span class="font-bold">applications web sur mesure</span>, qui répondent à vos besoins opérationnels, facilitent vos processus internes et offrent une valeur ajoutée significative à vos utilisateurs.<br /><br />
      Notre atout : <span class="font-bold">Une bibliothèque de composants testés, personnalisables et prêts à l'emploi</span> qui nous permet de développer votre site en quelques jours seulement.`,
    single: true,
    imgOne: "/images/dev.jpg",
    imgOneAlt: "",
    btnExists: true,
    btnTitle: "Lancez mon projet web",
    btnURL: "#contact-form",
  },
  {
    id: "seo",
    isRightSection: false,
    title: "Amélioration de votre visibilité sur les moteurs de recherche",
    subTitle: `
      Le paysage numérique est de plus en plus concurentiel. Apparaître dans le haut du classement des moteurs de recherche est de plus en plus difficile.<br/><br/>
      Notre méthode de travail repose sur plusieur leviers : 
      <ul><li>Une analyse pointue de votre concurrence,</li><li>Une stratégie de mots-clés sur mesure,</li><li> La rédaction de contenu pertinent répondant aux intentions de recherche de votre cible,</li><li>Une optimisation technique de votre site.</li><li>Une stratégie de netlinking de qualité.</li></ul><br/><br/>
      Notre force : l'usage de l'<span class="font-bold">A/B testing</span><br/><br/> 
      <span class="font-bold">Optimisation On-Site</span> : Les fondations sur lesquelles repose votre succès en SEO. Nous optimisons votre site web en profondeur, depuis la structure et le contenu jusqu'à la performance technique. Nous veillons à ce que votre site soit non seulement convivial pour les moteurs de recherche, mais aussi et surtout pour vos utilisateurs.<br/><br/>
      <span class="font-bold">Stratégies Off-Site</span> : Étendez votre influence au-delà de votre site. Notre approche off-site vise à construire et à améliorer la réputation de votre site sur internet. Nous utilisons des techniques éprouvées de création de liens (backlinking) et de marketing de contenu pour augmenter la pertinence et l'autorité de votre site, ce qui se traduit par un meilleur classement dans les résultats de recherche.<br/><br/>
      <span class="font-bold">Backlinking de Qualité</span> : Les liens sont les voies de la crédibilité sur internet. Nous nous concentrons sur l'obtention de backlinks de haute qualité provenant de sites réputés et pertinents dans votre secteur. Cette stratégie non seulement booste votre SEO, mais génère également du trafic vers votre site.<br/><br/>`,
    img: "/images/seo.jpg",
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
    btnExists: true,
    btnTitle: "Améliorer ma visibilité en ligne",
    btnURL: "#contact-form",
  },
];
---

<!-- Professional Service instead of WebPage https://schema.org/ProfessionalService OR Service https://schema.org/Service -->
<MainLayout
  title=""
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/blog",
    url: "https://screwfast.uk/blog",
    name: "Blog | ScrewFast",
    description:
      "Stay up-to-date with the latest trends and developments in the construction industry with insights from ScrewFast's team of industry experts.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk",
      name: "ScrewFast",
      description:
        "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs.",
    },
    inLanguage: "en-US",
  }}
>
  <HeroSection
    title=`L'agence web malouine <span
        class="text-green-700 dark:text-green-400">nouvelle génération</span>`
    subTitle="Nous vous accompagnons dans le développement numérique de votre entreprise."
    primaryBtn="Planifier un rendez-vous"
    primaryBtnURL="#contact-form"
    secondaryBtn="Découvrez nos services"
    secondaryBtnURL="#services"
    withReview={false}
    src="/images/hero-img.jpg"
    alt="Photo de Alvaro Reyes sur Unsplash"
  />

  <MainSection
    title="Le studio Web Crafters, la nouvelle agence web à Saint-Malo"
    subTitle="Notre objectif : transformer vos idées en réalités numériques. Que vous soyez une startup innovante, une TPE ou une PME en pleine croissance, notre équipe experte est là pour créer des solutions web personnalisées qui parlent directement à votre public cible."
  />
  <FeaturesNavs
    title=`Nos <span class="text-green-700 dark:text-yellow-400">Web crafters</span> vous épaule tout au long du cycle de vie de votre projet.`
    tabs={[
      {
        heading: "Stratégie numérique",
        content:
          "Parce que partir à l'aventure sans une boussole c'est du suicide, nous élaborons une stratégie sur-mesure qui augmente votre visibilité en ligne.",
        svg: "strategy",
        src: "/images/strat.jpg",
        alt: "Un expert du studio web crafters expliquant la stratégie numérique conçu pour un client lors d'une réunion de restitution avec un client - Photo de Priscilla Du Preez  sur Unsplash",
        first: true,
        second: true,
      },
      {
        heading: "Identité visuelle",
        content:
          "Nos experts UX/UI vous conçoivent une identité visuelle remarquable. Basé sur cette identité visuelle, ils déclinent des interfaces attractives et intuitives pour une expérience utilisateur optimale.",
        svg: "design",
        src: "/images/web-design.jpg",
        alt: "Photographie d'un écran d'ordinateur affichant un exemple d'identité visuelle conçu par les designers UX/UI du studio Web Crafters - Une photo de Balázs Kétyi Unsplash",
        second: true,
      },
      {
        heading: "Développement web sur-mesure",
        content:
          "Sites vitrine, e-commerce, applications web & mobile... nos créations sont testées et optimisées pour un référencement, une responsivité, une accessibilité et une performance maximale.",
        svg: "tools",
        src: "/images/dev.jpg",
        alt: "Photographie d'un écran d'ordinateur montrant un éditeur de code juxtaposé à un exemple de site web développé par notre équipe de développement",
        second: true,
      },
      {
        heading: "Référencement naturel (SEO)",
        content:
          "Nos experts SEO surveille votre classement sur les moteurs de recherche et actionnent les leviers nécessaires pour optimiser votre positionnement.",
        svg: "seo",
        src: "/images/seo.jpg",
        alt: "Photographie d'un homme tapant à l'ordinateur",
        second: true,
      },
      {
        heading: "Maintenance et support",
        content:
          "Nous garantissont le bon fonctionnement de vos solutions numériques au quotidien. Nous proposons tous les niveaux de maintenance : préventives, correctives et évolutives",
        svg: "maintenance",
        src: "/images/support.jpg",
        alt: "Photographie d'un homme membre de l'équipe support web crafters en train de réaliser une intervention de maintenance sur un site web développé par le studio Web Crafters",
        second: true,
      },
    ]}
  />
  <HeroSectionAlt
    title="Prêt à donner vie à votre projet web ?"
    subTitle="Commencez par le premier pas : une réunion de lancement avec notre équipe. C'est l'occasion parfaite pour nous de plonger dans votre vision, comprendre vos objectifs et poser les fondations d'une collaboration fructueuse."
    url="#contact-form"
    btnTitle="Planifier ma réunion de lancement"
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          id={article.id}
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : article.img && article.imgAlt ? (
        <LeftSection
          id={article.id}
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : null;
    })
  }

  <FeaturesGeneral
    title="Les valeurs"
    subTitle="Chez Web Crafters, nous avons à coeur de vous proposer des solutions adaptées à votre contexte et vos objectifs. Que vous soyez une startup innovante, une TPE ou une PME en pleine croissance, notre équipe experte est là pour vous accompagner à chaque étape de votre projet."
    alt="Les valeurs du studio web crafters"
    features={features}
  />

  <HeroSectionAlt
    title="Prêt à donner vie à votre projet web ?"
    subTitle=" Commencez par le premier pas : une réunion de lancement avec notre équipe. C'est l'occasion parfaite pour nous de plonger dans votre vision, comprendre vos objectifs et poser les fondations d'une collaboration fructueuse."
    url="#contact-form"
    btnTitle="Planifier ma réunion de lancement"
  />
  <FAQ title="FAQ" faqs={faqs} />
  <ContactSection />
</MainLayout>
